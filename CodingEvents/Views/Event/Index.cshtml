@using CodingEvents.Models
@model List<Event>

@{
    ViewData["Title"] = "Index";
}

<h2>Coding Events</h2>

<p>
    <a asp-controller="Event" asp-action="Add">New Event</a>
</p>

<p>
    <a asp-controller="Event" asp-action="Delete">Delete Event</a>
</p>

@if (Model.Count == 0)
{
<p>No events</p>
} else
{
<table class="table">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Description</th>
        <th>Email</th>
        <th>Type</th>
    </tr>
    @foreach (var evt in Model)
    {
    <tr>
        <td>@evt.Id</td>
        <td>@evt.Name</td>
        <td>@evt.Description</td>
        <td>@evt.Email</td>
        <td>@evt.Type</td>
    </tr>
    }

</table>
}



